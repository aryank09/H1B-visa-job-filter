{
  "manifest_version": 3,
  "name": "Fastrack H1B",
  "version": "1.0",
  "description": "Checks if a company is sponsoring H1B visas based on job listings.",
  "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "declarativeNetRequest",
      "tabs"
  ],
  "host_permissions": [
      "https://www.linkedin.com/*",
      "https://h1bdata.info/*"
  ],
  "background": {
      "service_worker": "background.js",
      "type": "module"
  },
  "content_scripts": [
      {
          "matches": ["https://www.linkedin.com/jobs/*"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "Frame 2.png",
          "48": "Frame 2.png",
          "128": "Frame 2.png"
      }
  },
  "icons": {
      "16": "Frame 2.png",
      "48": "Frame 2.png",
      "128": "Frame 2.png"
  },
  "web_accessible_resources": [{
      "resources": ["Frame 2.png"],
      "matches": ["https://www.linkedin.com/*"]
  }],
  "declarative_net_request": {
      "rule_resources": [
          {
              "id": "cors_rules",
              "enabled": true,
              "path": "rules.json"
          }
      ]
  }
}
